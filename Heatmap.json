{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "the population per state, engineers per state, and hurricanes per state",
  "title":{
    "text": "County-Level Debt-to-income Ratio, Three periods"

  
  },

  "repeat": {"row": ["recession", "covid", "present"]},
  "resolve": {
    "scale": {
      "color": "independent"
    }
  },

  "spec": {
    "width": 500,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/GeorgeRobbin/GeorgeRobbin.github.io/main/household-debt-by-county2008.csv"
    },

    "transform": [
      {
        "lookup": "id",
        "from": {
          "data": {
            "url": "data/us-10m.json",
            "format": {
              "type": "topojson",
              "feature": "counties"
            }
          },
          "key": "id"
        },
        "as": "geo"
      }
    ],
    "projection": {"type": "albersUsa"},
    "mark": "geoshape",
    "encoding": {
      "shape": {
        "field": "geo",
        "type": "geojson"
      },
      "color": {
        "field": {"repeat": "row"},
        "type": "quantitative"
      }
    }
  }
}
