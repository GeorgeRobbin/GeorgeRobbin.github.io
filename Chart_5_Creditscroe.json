{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
  "data": {
    "url": "https://raw.githubusercontent.com/GeorgeRobbin/GeorgeRobbin.github.io/main/credit_Score_mortgage%20(1).csv"
  },
  
  "mark": "bar",
  "width": 600,
  "height": 300,
  
  "title": {
    "text": " US Mortgage oriantations by Credit Scores",
    "subtitle": "Biilion Dollars. 2003-2021. Source: Federal Reserve Bank of New York",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },

    "transform": [
    
    {"filter": {"selection": "bandSelector"}},
    
    {"filter": {
      "field": "band",
      "oneOf":[
        "620-659",
        "660-719",
        "720-759",
        "760+",
        "<620"

      ]}
    }
  ],

 "selection": {
  "bandSelector": {
    "type": "single",
    "fields": ["band"],
    "bind": {
      "input": "select",
      "options": [
         null,
        "<620",
        "620-659",
        "660-719",
        "720-759",
        "760+"
      ],
      "name": "Choose Credit Score"
    }
  }
},
